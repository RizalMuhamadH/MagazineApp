<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_11background"
    android:orientation="vertical"
    android:id="@+id/layout_password"
    tools:context="com.lumiere.user.magazineapp.Activity.PasswordActivity">
    <LinearLayout
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Kata Sandi Baru"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/txt_password_baru"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:hint=" Kata Sandi Baru"
            android:background="@drawable/round_edittext"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Ulang Kata Sandi"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/txt_ulang_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:hint=" Ulang Kata sandi"
            android:background="@drawable/round_edittext"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/btn_password"
            android:textStyle="bold"
            android:background="@drawable/hover_button"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Sunting Password"/>
    </LinearLayout>
</LinearLayout>
