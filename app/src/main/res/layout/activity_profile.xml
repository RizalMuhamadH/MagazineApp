<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@drawable/rsz_11background"
    tools:context="com.lumiere.user.magazineapp.Activity.ProfileActivity">
    <FrameLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="left|center_vertical"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HI, User"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/btn_img_home"
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_home"/>
    </FrameLayout>
    <LinearLayout
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Nama"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/txt_profile_nama"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textEmailAddress"
            android:hint=" Nama"
            android:background="@drawable/round_edittext"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Username"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/txt_profile_username"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textEmailAddress"
            android:hint=" Username"
            android:background="@drawable/round_edittext"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Email"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/txt_profile_email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textEmailAddress"
            android:hint=" jon.do@bankbjb.co.id"
            android:background="@drawable/round_edittext"
            android:layout_marginBottom="20dp"/>

        <Button
            android:textStyle="bold"
            android:background="@drawable/hover_button"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Sunting Nama"/>
        <Button
            android:textStyle="bold"
            android:background="@drawable/hover_button"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Ubah Password"/>
        <Button
            android:textStyle="bold"
            android:background="@drawable/hover_button"
            android:textColor="@color/white"
            android:id="@+id/btn_logout"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Keluar Akun"/>
    </LinearLayout>
</LinearLayout>
