<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_11background"
    tools:context="com.lumiere.user.magazineapp.Activity.ForgotPasswordActivity">
    <FrameLayout
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/logo_hcnews"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Mail"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint=" E-mail"
                android:background="@drawable/round_edittext"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lupa_password"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="italic" />
            <FrameLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:gravity="bottom"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/num_random"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <EditText
                    android:background="@drawable/round_edittext"
                    android:layout_gravity="right"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:hint=" XXXX"/>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/num_verifikasi"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </FrameLayout>
        </LinearLayout>
        <Button
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/hover_button"
            android:layout_marginBottom="70dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Setel Ulang Kata Sandi"/>
    </FrameLayout>
</RelativeLayout>
